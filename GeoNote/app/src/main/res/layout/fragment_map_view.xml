<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geonote.app.Fragments.MapViewFragment">

        <LinearLayout
            android:id="@+id/mapHolder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <com.shamanland.fab.FloatingActionButton
            android:src="@drawable/ic_content_new"
            android:id="@+id/fabButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            app:color="#FFDF4D38"
            />

        <TextView
            android:id="@+id/mapViewLoggedInUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/mapViewScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:backgroundTint="@color/com_facebook_usersettingsfragment_not_connected_text_color"
        android:text="Loading Notes and Map... Please Standby"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    </FrameLayout>
