<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_info_bubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ivInfoWindowMain"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/notespin">
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtInfoWindowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtInfoWindowNoteAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:singleLine="false"
            android:textColor="#ff7f7f7f"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/txtInfoWindowEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textColor="#ff7f0d0b"
            android:text="Click to edit"
            android:textSize="9dp"/>

    </LinearLayout>
</LinearLayout>